#!/bin/bash
# ------------------------------------------------------------------------------
# Build neovim
# ------------------------------------------------------------------------------

if [[ -d ~/git/neovim ]]; then
  echo "Update neovim sources."
  cd ~/git/neovim
  git pull
else
  echo "Clone neovim sources."
  cd ~/git
  git clone https://github.com/neovim/neovim
fi

echo "Build neovim."
cd ~/git/neovim
sudo make install
exec bash
