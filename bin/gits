#!/bin/bash
# ------------------------------------------------------------------------------
# Check the porcelain state of my git repositories.
# ------------------------------------------------------------------------------
lsd() { ls -d */ | tr -d '/' ; }

# ------------------------------------------------------------------------------
repo() {
  case $1 in
    bb)
      repoName=git
      ;;
    git)
      repoName=git
      ;;
    vim)
      repoName=git/vim/bundle
      ;;
    soup)
      repoName=soup
      ;;
    *)
      repoName=git
  esac
  echo $repoName
}

# ------------------------------------------------------------------------------
gitPull() {
  case $1 in
    pull)
      [ -z $(git status --porcelain) ] && git pull && echo
      ;;
  esac
}

# ------------------------------------------------------------------------------
gitSetUserAndEmail(){
  case $1 in
    pull)
      case $2 in
        bb) gce fk ;;
        *) gce traap ;;
      esac
  esac
}

# ------------------------------------------------------------------------------
gits(){

  #command to check if we are inside a git repository.

  # Save current directory.
  dir=$(pwd)

  repoName=$(repo $1)
  cd ${HOME}/${repoName} > /dev/null;

  for i in $(lsd); do

    # move to subdirectory
    d=${HOME}/${repoName}/${i%%}
    cd $d > /dev/null

    # Do work if were are inside a git repository.
    if [[ insideRepo ]]; then
      x=repoChanged
      $x && echo "*** ${d} ***";
      $x && git status --short --branch;
      $x && echo ""
      $x && gitPull $2
      $x && gitSetUserAndEmail $1 $2
    fi

    # move up a directory
    cd - > /dev/null;
  done;

  # Restore current director.
  cd $dir
}
# ------------------------------------------------------------------------------
gits "$@"
# ------------------------------------------------------------------------------
