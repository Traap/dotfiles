#!/bin/bash
verbose=false
winclass=$(xdotool search --class scratchpad);

[ $verbose ] && notify-send 'scratchpad' '$winclass'

if [ -z "$winclass" ]; then
[ $verbose ] && notify-send 'scratchpad' 'Create scratchpad'
   kitty --class scratchpad
else
  if [ ! -f /tmp/scratchpad ]; then
    [ $verbose ] && notify-send 'scratchpad' 'Hide scratchpad'
    touch /tmp/scratchpad && xdo hide "$winclass"
  elif [ -f /tmp/scratchpad ]; then
    [ $verbose ] && notify-send 'scratchpad' 'Show scratchpad'
    rm /tmp/scratchpad && xdo show "$winclass"
  fi
fi
