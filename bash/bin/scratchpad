#!/bin/bash
verbose=false
winclass=$(xdotool search --class scratchpad);

[ $verbose == true ] && notify-send 'scratchpad' '$winclass'

if [ -z "$winclass" ]; then
[ $verbose == true ] && notify-send 'scratchpad' 'Create scratchpad'
   cd $WIKIHOME
   alacritty --class scratchpad,scratchpad -e nvim +WikiJournal
else
  if [ ! -f /tmp/scratchpad ]; then
    [ $verbose == true ] && notify-send 'scratchpad' 'Hide scratchpad'
    touch /tmp/scratchpad && xdo hide "$winclass"
  elif [ -f /tmp/scratchpad ]; then
    [ $verbose == true ] && notify-send 'scratchpad' 'Show scratchpad'
    rm /tmp/scratchpad && xdo show "$winclass"
  fi
fi
