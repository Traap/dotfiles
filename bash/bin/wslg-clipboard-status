# Check if running inside WSL
if grep -qi microsoft /proc/version; then
  echo "ğŸ–¥ï¸  WSL detected: $(uname -r)"

  if [ -n "$WAYLAND_DISPLAY" ]; then
    echo "âœ… WSLg is active (WAYLAND_DISPLAY=$WAYLAND_DISPLAY)"
    echo "ğŸ“‹ Native clipboard integration via WSLg should work in Neovim."
