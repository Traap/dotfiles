#!/bin/bash
# {{{ list directory names in current folder

lsd() { ls -d */ | tr -d '/'; }

# -------------------------------------------------------------------------- }}}
# {{{ Get repo project folder.
#     $1 => [bb | git | vim | soup]

repo() {
  local repoType="$1"

  case "$repoType" in
    bb)
      repoName=bb
      ;;
    git)
      repoName=git
      ;;
    vim)
      repoName=git/vim/bundle
      ;;
    soup)
      repoName=soup
      ;;
    *)
      repoName=git
      ;;
    esac
  echo "$repoName"
}

# -------------------------------------------------------------------------- }}}
# {{{ Pull latest changes
# Args:
# $1 => repoType
# $2 => pull
#
# Steps:
#   1. Local tracked files must be clean.
#   2. Remote must have changes.
#   3. Duh! set user name and email.
#   4. Tank .. PULL
#
# Note:
# https://stackoverflow.com/questions/3258243/check-if-pull-needed-in-git

gitPull() {
  local repoType="$1"
  local action="$2"

  case "$action" in
    pull)
      upstream='@{u}'
      git fetch
      local=$(git rev-parse @)
      remote=$(git rev-parse "$upstream")
      base=$(git merge-base @ "$upstream")

      if [[ "$local" != "$remote" && "$local" == "$base" ]]; then
        echo "*** $(pwd) ***"
        echo "$base"
        gitSetUserAndEmail "$repoType" "$action"
        git pull
        echo
      fi
      ;;
  esac
}

# -------------------------------------------------------------------------- }}}
# {{{ Set git user and email using gce (Git Config Email).
#
# $1 => repoType
# $2 => pull

gitSetUserAndEmail() {
  local repoType="$1"
  local action="$2"

  case "$action" in
    pull)
      case "$repoType" in
          bb) gce work ;;
        soup) gce work ;;
           *) gce traap ;;
      esac
      ;;
  esac
}

# -------------------------------------------------------------------------- }}}
# {{{ Scan git repositories.
#
# $1 => repoType
# $2 => pull

gits() {
  local repoType="$1"
  local action="$2"

  # Save current directory.
  dir=$(pwd)

  # Move to repoType root.
  repoName=$(repo "$1")
  cd "${HOME}"/"${repoName}" || exit

  for i in $(lsd); do
    # move to subdirectory
    d=${HOME}/${repoName}/${i%%}
    cd "$d" || exit

    echo
    echo "### $d ###"

    # Do work if were are inside a git repository.
    if [[ $(git rev-parse --is-inside-work-tree 2>/dev/null) ]]; then
      if [[ -z $(git status --porcelain 2>/dev/null && git stash list 2>/dev/null) ]]; then
        gitPull "$1" "$2"
      else
        echo "*** $d ***"
        gdr
        git status --porcelain
        echo ""
      fi
    fi

    # move up a directory
    cd - > /dev/null || exit
  done

  # Restore current director.
  cd "$dir" || exit
}
# -------------------------------------------------------------------------- }}}
# {{{ Kick start the show.

gits "$@"

# -------------------------------------------------------------------------- }}}
