#!/usr/bin/env bash
# {{{ A function to mount WSL2 network drives
#
# Name:
#  mountWslDrive
#
# Use:
#  mountWslDrive [drive-letter]
#
# Argument:
#  $1 - [drive-letter]
#
#  mountWslDrive i mounts /mni/i
#
# -------------------------------------------------------------------------- }}}
# {{{ Validate argument.

if [[ $# -eq 0  || $# -eq 1 ]]; then

# -------------------------------------------------------------------------- }}}
# {{{ Mount WSL Drive

drive=$1

sudo mkdir -p /mnt/${drive}
sudo mount -t drvfs ${drive}: /mnt/${drive}

# -------------------------------------------------------------------------- }}}
# {{{ Report user input error.

else
  echo "Drive letter [ |D|E] is required." \
      && exit
fi

# -------------------------------------------------------------------------- }}}
# {{{ Exit gracefully

exit 0

# -------------------------------------------------------------------------- }}}
