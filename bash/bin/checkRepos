#!/bin/bash
# {{{ check state for all repo types

checkRepos() {
  sayAndDo "gits status -r git -v"
  sayAndDo "gits status -r soup -v"
  sayAndDo "gits status -r private -v"
}

# -------------------------------------------------------------------------  }}}
# {{{ Kick start the show.

checkRepos "$@"

# -------------------------------------------------------------------------- }}}
