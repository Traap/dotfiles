#!/bin/bash
# {{{ Test function to swap NeoVim environments
#
# Name: switchNeoVim
#
# Use:
#  switchNeoVim LunarVim
#
# Argument:
#  $1 - Different NeoNvim envirements I have isntalled.
#
# Note:
#   1. This function changes the symbolic link to NeoVim only.
#   2. Install the experimental NeoVim enviroment first.
#
# -------------------------------------------------------------------------- }}}
# {{{ removePackerPackages

removePackerPackages() {
  rm -rf ~/.cache/nvim
  rm -rf ~/.config/nvim
  rm -rf ~/.local/share/nvim
  rm -rf ~/.local/state/nvim
}

# -------------------------------------------------------------------------- }}}
# {{{ Validate argument.

if [[ $# -eq 1 ]]; then

# -------------------------------------------------------------------------- }}}
# {{{ Set the NeoVim enfironment.

case $1 in
  kick)
    removePackerPackages
    ln -fsv ~/git/kickstart.nvim ~/.config/nvim
    ;;
  lazy)
    removePackerPackages
    ln -fsv ~/git/lzvim.starter ~/.config/nvim
    ;;
  NvChad)
    removePackerPackages
    ln -fsv ~/git/NvChad ~/.config/nvim
    ;;
  nvim)
    removePackerPackages
    ln -fsv ~/git/nvim ~/.config/nvim
    ;;
  prime)
    removePackerPackages
    ln -fsv ~/git/prime ~/.config/nvim
    ;;
  tj)
    removePackerPackages
    ln -fsv ~/git/tjdevries/xdg_config/nvim ~/.config/nvim
    ;;
  *)
esac

# -------------------------------------------------------------------------- }}}
# {{{ Report user input error.

else
  echo "NeoVim name [AstroVim | LunarVim | nvim | scratch ] is required" \
      && exit
fi

# -------------------------------------------------------------------------- }}}
# {{{ Exit gracefully

exit 0

# -------------------------------------------------------------------------- }}}
