#!/bin/bash
verbose=false
winclass=$(xdotool search --class YouTube);

[ $verbose == true ] && notify-send 'YouTube' "$winclass"

if [ -z "$winclass" ]; then
[ $verbose == true ] && notify-send 'YouTube' 'Create YouTube'
   cd "$GITHOME/youtube" || exit
   alacritty --class YouTube,YouTube --command ao YouTube
else
  if [ ! -f /tmp/YouTube ]; then
    [ $verbose == true ] && notify-send 'YouTube' 'Hide YouTube'
    touch /tmp/YouTube && xdo hide "$winclass"
  elif [ -f /tmp/YouTube ]; then
    [ $verbose == true ] && notify-send 'YouTube' 'Show YouTube'
    rm /tmp/YouTube && xdo show "$winclass"
  fi
fi
