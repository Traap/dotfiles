#!/bin/bash
sshkill() {
  local AGENT_ENV_FILE="${SSHHOME}/agent_env"
  rm -f "$AGENT_ENV_FILE" > /dev/null
  unset SSH_AGENT_PID SSH_AUTH_SOCK

  if [[ $OSTYPE != 'msys' ]]; then
    killall ssh-agent
  else
    pid=$(ps aux | awk '{print $1, $8}' | awk /ssh-agent/ | awk '{print $1}')
    if [[ $pid =~ ^[0-9]+$ ]]; then
      kill $pid
    fi
  fi
}
sshkill "$@"
