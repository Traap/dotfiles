 alacritty --title=Weather --exec=weather --hold

supe + z
 alacritty --title='htop task manager' --exec=htop --hold

super + slash
  sxhkd-help

ctrl + shift + b
  dbeaver

ctrl + shift + e
  thunderbird

ctrl + shift + d
  discord

ctrl + shift + m
  xfce4-taskmanager

ctrl + shift + o
   onlyoffice-desktopeditors

ctrl + shift + r
  remmina

ctrl + shift + s
  slack

ctrl + shift + t
  teams

ctrl + shift + z
  teams;       notify-send 'Teams' 'Started'; \
  thunderbird; notify-send 'Thunderbird' 'Started'

F12
  alacritty --drop-down

# -------------------------------------------------------------------------- }}}
# {{{ Wallpaper adjustments

alt + shift + t
  variety -t && wal -i $(cat $HOME/.config/variety/wallpaper/wallpaper.jpg.txt)&

alt + shift + n
  variety -n && wal -i $(cat $HOME/.config/variety/wallpaper/wallpaper.jpg.txt)&
alt + shift + p
  variety -p && wal -i $(cat $HOME/.config/variety/wallpaper/wallpaper.jpg.txt)&

alt + shift + f
  variety -f && wal -i $(cat $HOME/.config/variety/wallpaper/wallpaper.jpg.txt)&

alt + shift + u
  wall -i $(cat $HOME/.config/variety/wallpaper/wallpaper.jpg.txt)&

# -------------------------------------------------------------------------- }}}
# {{{ Sound, brightness, etc

Print
  scrot 'ArcoLinux-%Y-%m-%d-%s_screenshot_$wx$h.jpg' -e 'mv $f $$(xdg-user-dir PICTURES)'

XF86AudioRaiseVolume
  amixer set Master 10%+

XF86AudioLowerVolume
  amixer set Master 10%-

XF86AudioMute
  amixer -D pulse set Master 1+ toggle

XF86AudioPlay
  playerctl play-pause

XF86AudioNext
  playerctl next

XF86AudioPrev
  playerctl previous

XF86AudioStop
  playerctl stop

XF86MonBrightnessUp
  xbacklight -inc 10

XF86MonBrightnessDown
  xbacklight -dec 10

# -------------------------------------------------------------------------- }}}
