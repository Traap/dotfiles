#!/usr/bin/env bash
# NodeJs packages

if [[ $nodeJsFlag == true ]]; then
  say 'Install NodeJs packages.'

  nodejs_packages=(
    "neovim"
    "node-gyp"
    "nodejs-nopt"
    "@mermaid-js/mermaid-cli"
    "semver"
    "yarn"
  )

  sudo npm install -g "${nodejs_packages[@]}"
else
  say 'NodeJs packages skipped.'
fi
