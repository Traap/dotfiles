#!/usr/bin/env bash
# pacman packages

if [[ $pacmanPackagesFlag == true ]]; then
  say 'Install pacman packages.'

  pacman_packages=(
    "cmake"
    "docker"
    "luacheck"
    "meld"
    "ninja"
    "nodejs"
    "npm"
    "openssh"
    "openssl"
    "python"
    "python-pynvim"
    "screenkey"
    "selene"
    "slop"
    "stylua"
    "tmux"
    "unzip"
    "vim"
    "which"
  )

  sudo pacman -Syyu --noconfirm "${pacman_packages[@]}"
else
  say 'pacman packages skipped.'
fi
