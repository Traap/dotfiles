#!/usr/bin/env bash
NUM_MONITORS=$(hyprctl monitors | grep -c "Monitor")

if [ "$NUM_MONITORS" -eq 1 ]; then
    monitors=~/.config/hypr/layout/laptop.conf
elif [ "$NUM_MONITORS" -eq 2 ]; then
    monitors=~/.config/hypr/layout/laptop_monitor.conf
elif [ "$NUM_MONITORS" -ge 3 ]; then
    monitors=~/.config/hypr/layout/workstation.conf
else
    monitors=~/.config/hypr/layout/laptop.conf
fi

cp $monitors ~/.config/hypr/monitors.conf
